{
  "id": "render_message_container",
  "options": {
    "mode": "auto",
    "duration": 3000,
    "position": "top_right"
  },
  "styles": {
    "container": {
      "position": "fixed",
      "width": "250px",
      "height": "auto",
      "flexDirection": "column",
      "listStyle": "none",
      "padding": "5px 0",
      "margin": "0",
      "display": "flex",
      "alignItems": "center"
    },
    "message": {
      "width": "250px",
      "height": "auto",
      "border": "1px solid gray",
      "background": "white",
      "padding": "10px",
      "margin": "5px 0",
      "fontSize": "13px",
      "boxSizing": "border-box",
      "opacity": 0,
      "transform": "translate(0, 0)",
      "transition": "transform ease-in-out 250ms, opacity ease-in-out 250ms",
      "display": "flex",
      "justifyContent": " flex-end",
      "alignItems": "center"
    },
    "icon": {
      "padding": "1px",
      "background": "none",
      "border": "none",
      "width": "25px",
      "height": "auto"
    },
    "progress": {
      "position": "absolute",
      "bottom": "1px",
      "left": "1px",
      "width": "0",
      "height": "1px",
      "background": "#cccccc"
    },
    "centered": {
      "width": "100%"
    }
  }
}